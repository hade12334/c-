            string test = "";
            for (int j = 2; j < value; j++)
            {
                if ((value % j) == 0)
                {
                    test += j;
                    test += " + ";
                }
            }
            test = test.Substring(0, test.Length - 2);
            test += "= ";
            test += value;
            Console.WriteLine(test);
        }
